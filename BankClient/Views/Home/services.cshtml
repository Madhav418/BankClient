
@{
    ViewBag.Title = "services";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Financial Services</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <script>
        document.addEventListener('contextmenu', function (e) {
            e.preventDefault();
        });
    </script>

    <style>
        .card {
            max-width: 300px;
            margin: 10px;
            text-align: center;
            transition: transform 0.3s; /* Add smooth transition for zoom effect */
        }

            .card:hover {
                transform: scale(1.1); /* Zoom in effect on hover */
            }

            .card .d-flex {
                display: flex;
                justify-content: space-between;
                align-items: center;
                padding: 10px;
            }

            .card .image-container img {
                max-width: 100px;
                max-height: 100px;
                margin-right: 10px;
            }

        .ly {
            background-image: url('../../images/sb.png');
           
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center center;
            height: 100vh;
        }
    </style>
</head>
<body>
    <div class="ly"></div>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="d-flex">
                        <div class="image-container">
                            <img src="https://thumbs.dreamstime.com/b/home-loan-icon-beautiful-meticulously-designed-120821241.jpg" alt="Home Loan Icon">
                        </div>
                        <div class="info-container">
                            <h5>Home Loans</h5>
                            <p>Explore our flexible home loan options and make your dream home a reality.</p>
                        </div>
                    </div>
                </div>
            </div>
         
            <div class="col-md-4">
                <div class="card">
                    <div class="d-flex">
                        <div class="image-container">
                            <img src="https://cdn-icons-png.flaticon.com/512/6963/6963703.png" alt="Credit Card Icon">
                        </div>
                        <div class="info-container">
                            <h5>Credit Cards</h5>
                            <p>Choose from our range of credit cards and enjoy exclusive rewards and benefits.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="d-flex">
                        <div class="image-container">
                            <img src="https://jdcoem.ac.in/wp-content/uploads/2020/04/scholarship-ic.png" alt="Education Loans Icon">
                        </div>
                        <div class="info-container">
                            <h5>Education Loans</h5>
                            <p>Invest in your future with our flexible education loan options.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="d-flex">
                        <div class="image-container">
                            <img src="https://www.vippng.com/png/full/176-1766748_investment-icon-png-gloucester-road-tube-station.png" alt="Invest Icon">
                        </div>
                        <div class="info-container">
                            <h5>Shares and Investments</h5>
                            <p>Explore investment opportunities to grow your wealth.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="d-flex">
                        <div class="image-container">
                            <img src="https://cdn-icons-png.flaticon.com/128/9590/9590116.png" alt="Deposits Icon">
                        </div>
                        <div class="info-container">
                            <h5>Deposits</h5>
                            <p>Secure your funds and enjoy attractive interest rates with our deposit options.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="d-flex">
                        <div class="image-container">
                            <img src="https://thumbs.dreamstime.com/b/protection-life-insurance-icon-vector-graphics-beautiful-design-fully-editable-commercial-print-media-web-any-type-191997520.jpg" alt="Insurance Icon">
                        </div>
                        <div class="info-container">
                            <h5>Insurance</h5>
                            <p>Protect your assets and loved ones with our comprehensive insurance solutions.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>





    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>
